{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType ": "module"
  },
  "env": {
    "browser": true
  },
  "extends": "airbnb-base",
  "rules": {
    "no-mixed-operators": [
      "error",
      {
      "groups": [
        ["&", "|", "^", "~", "<<", ">>", ">>>"],
        ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
        ["&&", "||"],
        ["in", "instanceof"]
      ],
      "allowSamePrecedence": true
      }
    ],
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "no-plusplus": ["off"],
    "no-param-reassign": ["off"]
  }
}
